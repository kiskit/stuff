@(message: String)

<html>
    <head>
        <title>Login</title>
        <link rel="shortcut icon" type="image/png" href="@routes.Assets.at("images/favicon.png")">
        <link rel="stylesheet" type="text/css" media="screen" href="@routes.Assets.at("stylesheets/login.css")">
        <link rel="stylesheet" type="text/css" media="screen" href="@routes.Assets.at("stylesheets/bootstrap.css")">
    </head>
    <body>
    	<!-- welcome header -->
    	<!-- buttons -->
    	<!-- TODO rewrite with only one form -->
    	<form action=@routes.Application.admin method="POST" style="margin: 0px; padding: 0px;"> 
		<div style="height:400px;width:400px;float:left;">
			<div style="height:600px;width:200px;float:left;">
    			<button class="btn btn-primary" type="submit" name="action" value="Checkin" style="height:200px;width:200px">Rendre un DVD</button>
    			<button class="btn btn-primary" type="submit" name="action" value="Checkout" style="height:200px;width:200px">Sortir un DVD</button>
    			<button class="btn btn-warning" type="submit" name="action" value="Users" style="height:200px;width:200px">Gestion des utilisateur</button>
    		</div>
			<div style="height:600px;width:200px;float:right;">
				<button class="btn btn-info" type="submit" name="action" value="Videos" style="height:200px;width:200px">Gestion des vidéos</button>
    			<button class="btn btn-danger" type="submit" name="action" value="Late" style="height:200px;width:200px">Prêts en retard</button>
    			<button class="btn btn-info" type="submit" name="action" value="Historique" style="height:200px;width:200px">Historique</button>
    		</div>
    	</div>
    	</form>
    </body>
</html>