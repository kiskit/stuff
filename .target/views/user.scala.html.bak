@(userForm: Form[User])

@import helper._

<html>
<head>
    <title>User edition</title>
    <link rel="shortcut icon" type="image/png" href="@routes.Assets.at("images/favicon.png")">
    <link rel="stylesheet" type="text/css" media="screen" href="@routes.Assets.at("stylesheets/main.css")">
    <link rel="stylesheet" type="text/css" media="screen" href="@routes.Assets.at("stylesheets/bootstrap.min.css")">
</head>
<body>
<header>
    
</header>

    <h1>Sign in</h1>
    @helper.form(action = routes.Application.validateUser) {
    
    
    @helper.inputText(userForm("name"))
    
    @helper.inputText(userForm("firstName"))
    @helper.inputText(userForm("email"))
    
    @select(
            field = userForm("status"), 
            options = options(
                "ACTIVE" -> "ACTIVE",
                "INACTIVE" -> "INACTIVE"
            ),
            args = '_label -> "User status"
        )
    @helper.inputText(userForm("creationDate"))
    @helper.inputText(userForm("updateDate"))
    @helper.input(userForm("isAdmin")) { (id, name, value, args) =>
    	<input type="checkbox" class="form-horizontal" name="Admin" id="cb_admin" ${userForm("isAdmin") ? 'checked':''}>
	} 
    
    
    <p class="buttons">
        <input type="submit">
    </p>
}
</body>
</html>