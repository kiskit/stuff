@(video: Video, videoInfo: com.omertron.themoviedbapi.model.MovieDb, admin: User)
@import helper.twitterBootstrap._

<html>
    <head>
        <title>Login</title>
        <link rel="shortcut icon" type="image/png" href="@routes.Assets.at("images/favicon.png")">
        <link rel="stylesheet" type="text/css" media="screen" href="@routes.Assets.at("stylesheets/login.css")">
        <link rel="stylesheet" type="text/css" media="screen" href="@routes.Assets.at("stylesheets/bootstrap.css")">        
        <script type="text/javascript" src='@routes.Assets.at("javascripts/sorttable.js")'></script>
    </head>
    <body>
        <header>
            <!-- If user connected, then display the admin header-->
            <!-- display filters: most recent, available only-->
        </header>
        
    <div class="container"  style="background-image:url(".");no-repeat center center fixed;-webkit-background-size: cover;-moz-background-size: cover;-o-background-size: cover;background-size: cover;">
    	<div class="panel panel-info" style="background-image:@video.getBackdrop(videoInfo)">
			<div class="panel-heading">
				@video.getInputTitle()
			</div>
			<div class="panel-body">
				<div class="panel-content">
					<span align="left"><img src="@video.getPoster(videoInfo)" alt="@videoInfo.getTitle()"></span>
					<span align="right"> @videoInfo.getOverview()</span>
				</div>
			</div> 
			
		</div>
		<button type="button" class="btn btn-danger" name="action" value="Close" onclick="window.location.href = '/videos';">Fermer</button>
    </div> <!-- /container -->
    </body>
</html> 

  
