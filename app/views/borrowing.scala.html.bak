@(bForm: Form[Borrowing], userList: List[User], user: User)
@import helper.twitterBootstrap._

<html>
    <head>
        <title>Edition d'un utilisateur</title>
        <link rel="shortcut icon" type="image/png" href="@routes.Assets.at("images/favicon.png")">
        <link rel="stylesheet" type="text/css" media="screen" href="@routes.Assets.at("stylesheets/login.css")">
        <link rel="stylesheet" type="text/css" media="screen" href="@routes.Assets.at("stylesheets/bootstrap.css")">        
        <script type="text/javascript" src='@routes.Assets.at("javascripts/sorttable.js")'></script>
    </head>
    <body>
        <header>
            <!-- If user connected, then display the admin header-->
            <!-- display filters: most recent, available only-->
            <a href="@routes.Application.index" id="logo"><span>VideoTruc</span>tasks</a>
            <dl id="user">
                <dt>@user.getName() <span>(@user.getEmail())</span></dt>
                <dd>
                    <a href="@routes.Application.logout()">Logout</a>
                </dd>
            </dl>
        </header>
        
    <div class="container">
    
	@helper.form(action = routes.Videos.validateBorrow(), 'class -> "form-horizontal") {
			<h2 >Emprunt Vidéo</h2>	
            @if(bForm.hasGlobalErrors){
				<p class="error">
            		@bForm.globalError.message
        		</p>
    		
    		<form action=routes.Videos.validateBorrow() class="form-horizontal"> 
    			@helper.select(userForm("status"), options = Seq("ACTIVE"->"Actif", "INACTIVE"->"Inactif"), '_label -> "Statut", '_showConstraints -> false)
    		</form>
    		
    		
    		
    		}
           
           
           
 <div class="control-group">
           	@helper.inputText(bForm("userId"), '_label -> "Id utilisateur", '_showConstraints -> false, 'class -> "form-control")
           	@helper.inputText(bForm("userName"), '_label -> "Nom", '_showConstraints -> false, 'class -> "form-control")
           	@helper.inputText(bForm("videoId"), '_label -> "Id Vidéo", '_showConstraints -> false, 'class -> "form-control")
           	@helper.inputText(bForm("videoTitle"), '_label -> "Titre Vidéo", '_showConstraints -> false, 'class -> "form-control", 'placeholder -> "Titre vidéo")
        	        	
        	<button type="submit" class="btn btn-primary">Terminé</button>
        	<button type="button" class="btn btn-danger">Annuler</button>
 </div>       	        
	}
    </div> <!-- /container -->
    </body>
</html> 

  